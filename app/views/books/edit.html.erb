

<h2 class="edid-title">Editing Book</h2>

<% if @book.errors.any? %>
  <%= @book.errors.count %>error occurred!!
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @book do |f| %>

  <h5>Title</h5>
  <%= f.text_field :title %>

  <h5>body</h5>
  <%= f.text_area :body %>

  <%= f.submit 'Update Book' %>

<% end %>

<div class="edit-click">
  <%= link_to "Show", book_path(@book.id) %>
  <a class="back" href="/books">Back</a>
</div>