<% if flash[:notice] %>
  <div class="flash">
    <%= flash[:notice] %>
  </div>
<% end %>

<h2 class="index-title">Books</h2>

  <table>
    <th>
      <tr>
        <th class="table-title">Title</th>
        <th class="table-body">Body</th>
      </tr>
    </th>
    <tbody>
      <tr><% @books.each do |book| %>
		  	<td><%= book.title %></td>
		  	<td><%= book.body %></td>
			  <td><%= link_to "Show", book_path(book.id) %></td>
		  	<td><%= link_to "Edit", edit_book_path(book.id) %></td>
		  	<td><%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Reallyï¼Ÿ" %></td>
		  </tr>
		      <% end %>
	  </tbody>
  </table>



<h3 class="new-title">New book</h3>

<% if @book.errors.any? %>
  <%= @book.errors.count %>error occurred!!
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @book, url: '/books', method: :post do |f| %>
  <h5>Title</h5>
  <%= f.text_field :title %>

  <h5>Body</h5>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book' %>
<% end %>




